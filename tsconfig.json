{
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".embeddable-build", ".embeddable-dev-build", ".embeddable", ".embeddable-dev-temp"],
    "compilerOptions": {
        "types": ["node"],
        "moduleResolution": "bundler",
        "removeComments": true,
        "sourceMap": true,
        "target": "es2022",
        "outDir": "lib",
        "declaration": true,
        "strict": false,
        "module": "esnext",
        "noEmitOnError": true,
        "lib": ["dom"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "jsx": "react-jsx"
    }
}